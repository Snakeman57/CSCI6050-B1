@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container border p-3 mt-4 form-horizontal">
    <div class="row">
        <h2 class="text-center">Create an Account!</h2>
        <h5 class="text-muted text-center">Please complete the form below.</h5>
        <br>
        <br>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="col-md-6 col-lg-5 col-xl-5 mb-3 mx-auto">
              <label><b>Required:</b></label>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6 col-lg-5 col-xl-5 input-group-md mb-3 mx-auto">
                <label class="form-label" asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
              <div class="col-md-6 col-lg-5 col-xl-5 input-group-md mb-3 mx-auto">
                <label class="form-label" asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="col-md-6 col-lg-5 col-xl-5 input-group-md mb-3 mx-auto">
                <label class="form-label" asp-for="Input.FavTheater"></label>
                <input asp-for="Input.FavTheater" class="form-control" />
                <span asp-validation-for="Input.FavTheater" class="text-danger"></span>
            </div>
            <div class="col-md-6 col-lg-5 col-xl-5 mb-3 mx-auto">
                <label class="form-label" asp-for="Input.Email"></label>
                <input placeholder="Email" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-md-6 col-lg-5 col-xl-5 mb-3 mx-auto">
                <label class="form-label" asp-for="Input.Password"></label>
                <input  placeholder="Password" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="col-md-6 col-lg-5 col-xl-5 mb-3 mx-auto">
                <label asp-for="Input.ConfirmPassword"></label>
                <input placeholder="Confirm Password" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
              <button id="registerSubmit" type="submit" class="col-12 btn btn-primary mt-3">Register</button>
              
            
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}  
