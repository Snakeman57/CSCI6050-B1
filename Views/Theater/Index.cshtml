@model IEnumerable<CineWeb.Models.Theater>

@{
    ViewData["Title"] = "Index";
}

<h1>Theater List</h1>

<p>
    <a asp-action="Create"><button class="btn bg-success text-white">Create New</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumRows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumCols)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumRows)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumCols)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn bg-primary text-white">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.ID" class="btn bg-primary text-white">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn bg-primary text-white">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
