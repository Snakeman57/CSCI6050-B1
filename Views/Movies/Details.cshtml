@using Microsoft.AspNetCore.Identity
@using CineWeb.Data
@inject SignInManager<CineWebUser> SignInManager
@inject UserManager<CineWebUser> UserManager

@model CineWeb.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h1> @Html.DisplayFor(model => model.Title)</h1>

<div>
    <div>
        @Html.DisplayFor(model => model.Runtime) | @Html.DisplayFor(model => model.RatingMPAA) | @(Model.NowShowing ? "Now Showing!" : "Comming Soon!")
    </div>
    <div>
        <img src="@Model?.PosterLink" style="max-height:50vh;"/>
    </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Writers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Writers)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stars)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stars)
        </dd>*@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Synopsis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Synopsis)
        </dd>
        @*<dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reviews)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reviews)
        </dd>*@
    </dl>
</div>
<div>
    @if (SignInManager.IsSignedIn(User)) {
        <a asp-action="Edit" asp-route-id="@Model?.ID"><button class="btn bg-primary text-white">Edit</button></a>
    }
    <a asp-controller="Order" asp-action="Index" asp-route-movie="@Model?.Title" style=@(Model.NowShowing ? "pointer-events:auto;" : "pointer-events:none;")><button class="btn bg-primary text-white" @(Model.NowShowing ? "" : "disabled")>Book tickets</button></a>
    <a asp-action="Index"><button class="btn bg-primary text-white">Back to List </button></a>
</div>
