@model CineWeb.Models.SeatSelector

@{
    ViewData["Title"] = "Seat Selection";
}

<body>
    <h2 class="text-center">Select Your Seats for @Model.Show.MovieId.Title</h2>
    <form>
        <table style="margin-left: auto; margin-right: auto;">
            <tbody>
                @for(byte i = Model.Show.TheaterId.NumRows; i > 0; i--){
                    @:<tr>
                        @for(byte j = 1; j <= Model.Show.TheaterId.NumCols; j++){
                            @:<td>
                                @:<button class="btn btn-primary" style="width:100%; height:100%;" disabled="@Model.SeatsTaken.Contains(new byte[] {i, j})">@Convert.ToChar(i + 64)@String.Format("{0:00}", j)</button>
                            @:</td>
                        }
                    @:</tr>
                }
            </tbody>
        </table>
    </form>
    <p>Seats Remaining: @Model.Total()</p>
</body>

