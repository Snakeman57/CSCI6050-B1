@model CineWeb.Models.stView

@{
    ViewData["Title"] = "Showtime Selection";
}

<body>
    <form>
        <label>Movie Selection</label>
        @Html.DropDownList("movie", Model.films, "Select Movie", new { @class = "form-control", onchange = @"form.submit()" })
        <label>Showtime Selection</label>
        @Html.DropDownList("Show", Model.shows, "Select Showtime", new { @class = "form-control" })
        <table class="table">
            <thead>
                <tr>
                    <th>Ticket</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.tickets)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => i.Name)
                        </td>
                        <td>
                            @Html.TextBoxFor(m => i.Name, new { @type = "number", @min = "0", @class="form-control" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
    <a asp-action="SelSeat"><button class="btn bg-primary text-white">Select Seats</button></a> 
</body>

