@model CineWeb.Models.MoviePromotion

@{
    ViewData["Title"] = "New Promo Code";
}
<head>
    <script>
        function addArtifacts() {
            let artifacts = document.getElementById("artif");
            switch (document.getElementById("Type").value) {
                case "ticket":
                case "attribute":
                    artifacts.innerHTML = "<label asp-for=\"Artifacts\" class=\"control-label\">Additional Info</label><input asp-for=\"Artifacts\" class=\"form-control\" /><span asp-validation-for=\"Artifacts\" class=\"text-danger\"></span>";
                    break;
                default:
                    artifacts.innerHTML = "";
                    break;
            }

        }
    </script>
</head>
<body>
    <div class="container border p-3 mt-4 form-horizontal">
        <div class="row">
            <h2 class="text-center">Add a New Promotional Code!</h2>
            <h5 class="text-muted text-center">Please fill out the form below.</h5>
            <br>
            <br>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @* <div class="col-md-6 col-lg-5 col-xl-9 input-group-md mb-3 mx-auto">
                    <label asp-for="ID" class="control-label"></label>
                    <input asp-for="ID" class="form-control" />
                    <span asp-validation-for="ID" class="text-danger"></span>
                </div> *@
                <div class="col-md-6 col-lg-5 col-xl-9 input-group-md mb-3 mx-auto">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-lg-5 col-xl-9 input-group-md mb-3 mx-auto">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-lg-5 col-xl-9 input-group-md mb-3 mx-auto">
                    <label for="Type">Promotion Type</label>
                    <select name="Type" id="Type" class="form-control" onchange="addArtifacts()">
                        <option value="total">By Total</option>
                        <option value="flat">Flat Amount</option>
                        <option value="ticket">By Ticket</option>
                        <option value="attribute">By Attribute</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group" id="artif"></div>
                <div class="col-md-6 col-lg-5 col-xl-9 input-group-md mb-3 mx-auto">
                    <label asp-for="Deal" class="control-label"></label>
                    <input asp-for="Deal" class="form-control" />
                    <span asp-validation-for="Deal" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-lg-5 col-xl-9 input-group-md mb-3 mx-auto">
                    <label asp-for="Start" class="control-label"></label>
                    <input asp-for="Start" class="form-control" />
                    <span asp-validation-for="Start" class="text-danger"></span>
                </div>
                <div class="col-md-6 col-lg-5 col-xl-9 input-group-md mb-3 mx-auto">
                    <label asp-for="End" class="control-label"></label>
                    <input asp-for="End" class="form-control" />
                    <span asp-validation-for="End" class="text-danger"></span>
                </div>
                <br/>
                <div>
                    <input type="submit" value="Create" class="btn btn-primary col-3 mx-auto text-white" style="horizantal-align:center; justify-content: center; display: flex" />
                </div>
                <br/>
            </form>
            <div>
                <a asp-action="Index" class="btn btn-primary col-3 mx-auto text-white" style="horizantal-align:center; justify-content: center; display: flex">Back to List</a>
            </div>
        </div>
    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
